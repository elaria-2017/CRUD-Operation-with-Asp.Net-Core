@model IEnumerable<Lend_CRUD.Models.item>
<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
    <h2 class="text-primary">Borrowed Items List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="item" asp-action="Create" class="btn btn-primary">
            Create New Item
        </a>
    </div>
    </div>
    <br />

@if (Model.Count() > 0)
{
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Borrower</th>
            <th>Lender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="30%">@item.itemName</td>
                <td width="30%">@item.borrower</td>
                <td width="30%">@item.lender</td>
            </tr>
        }
    </tbody>
</table> 
}
else {
<p>No Items Created Yet</p>
}
</div>


